<div class="card text-center">
  <div class="card-header" style="color:black;">
    <%= @article.title %>
    <%= link_to "", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article ?" }, :class => "far fa-trash-alt"%>
    <%= link_to "",  edit_article_path(@article), :class => "fa fa-pencil-alt" %>
    </div>
  <div class="card-body">
    <h5 class="card-title"></h5>
    <p class="card-text"><%= @article.content %></p>
  </div>
  <div class="card-footer text-muted">
    <i class="fa fa-history"></i> <%= link_to "Back to index",  articles_path %>
  </div>
</div>
